<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#fff"
        android:clickable="true"
        android:orientation="vertical"
        android:weightSum="1">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="48dip"
            android:background="@drawable/global_top_background" >

            <Button
                android:id="@+id/friend_card_view_return"
                android:layout_width="61dp"
                android:layout_height="fill_parent"
                android:layout_marginBottom="8dip"
                android:layout_marginLeft="8dip"
                android:layout_marginTop="8dip"
                android:background="@drawable/title_text_button"
                android:text="返回"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/top_layout"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginLeft="20dip"
                android:layout_marginRight="20dip"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/friend_card_view_top_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="8dip"
                    android:textColor="#ffffff"
                    android:textSize="18sp" />
            </LinearLayout>

            <Button
                android:id="@+id/friend_card_view_delete"
                android:layout_width="61dp"
                android:layout_height="fill_parent"
                android:layout_marginBottom="8dip"
                android:layout_marginRight="8dip"
                android:layout_marginTop="8dip"
                android:background="@drawable/title_text_button"
                android:text="删除"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dip"
            android:layout_marginRight="8dip"
            android:layout_marginTop="20dip"
            android:background="@drawable/about_top_bg"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="8dip" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:padding="8dip"
                android:text="姓名:        "
                android:textColor="#222222"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/friend_card_name"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:background="#00000000"
                android:gravity="center_vertical"
                android:padding="8dip"
                android:textColor="#333333" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dip"
            android:layout_marginRight="8dip"
            android:background="@drawable/about_mid_bg"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="8dip" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:padding="8dip"
                android:text="公司:        "
                android:textColor="#222222"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/friend_card_company"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:background="#00000000"
                android:gravity="center_vertical"
                android:padding="8dip"
                android:textColor="#333333" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dip"
            android:layout_marginRight="8dip"
            android:background="@drawable/about_mid_bg"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="8dip"  >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:padding="8dip"
                android:text="职位:        "
                android:textColor="#222222"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/friend_card_job"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:background="#00000000"
                android:gravity="center_vertical"
                android:padding="8dip"
                android:textColor="#333333" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dip"
            android:layout_marginRight="8dip"
            android:background="@drawable/about_mid_bg"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="8dip" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:padding="8dip"
                android:text="公司电话:"
                android:textColor="#222222"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/friend_card_c_number"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:background="#00000000"
                android:gravity="center_vertical"
                android:padding="8dip"
                android:textColor="#333333" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dip"
            android:layout_marginRight="8dip"
            android:background="@drawable/about_mid_bg"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="8dip" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:padding="8dip"
                android:text="公司地址:"
                android:textColor="#222222"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/friend_card_c_address"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:background="#00000000"
                android:gravity="center_vertical"
                android:padding="8dip"
                android:textColor="#333333" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dip"
            android:layout_marginRight="8dip"
            android:background="@drawable/about_mid_bg"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="8dip" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:padding="8dip"
                android:text="传真:        "
                android:textColor="#222222"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/friend_card_fax"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:background="#00000000"
                android:gravity="center_vertical"
                android:padding="8dip"
                android:textColor="#333333" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dip"
            android:layout_marginRight="8dip"
            android:background="@drawable/about_bottom_bg"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="8dip">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:padding="8dip"
                android:text="公司邮箱:"
                android:textColor="#222222"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/friend_card_c_email"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:background="#00000000"
                android:gravity="center_vertical"
                android:padding="8dip"
                android:textColor="#333333" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>