<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#fff"
        android:clickable="true"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="48dip"
            android:background="@drawable/global_top_background" >

            <Button
                android:id="@+id/user_info_menu"
                android:layout_width="40dip"
                android:layout_height="fill_parent"
                android:layout_marginLeft="8dip"
                android:background="@drawable/title_home_button" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginLeft="20dip"
                android:layout_marginRight="20dip"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="middle"
                    android:maxWidth="150dip"
                    android:padding="8dip"
                    android:text="用户信息"
                    android:textColor="#ffffff"
                    android:textSize="18sp" />
            </LinearLayout>

            <Button
                android:id="@+id/user_refresh"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_marginRight="8dip"
                android:background="@drawable/title_refresh_button" />

            <Button
                android:id="@+id/user_write"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_marginRight="8dip"
                android:background="@drawable/title_write_message_button" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >

            <ImageView
                android:id="@+id/user_info_head_wallpager"
                android:layout_width="fill_parent"
                android:layout_height="220dip"
                android:background="@drawable/cover_head"
                android:scaleType="centerCrop" />

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/user_info_head_wallpager"
                android:background="@drawable/profile_avatar_frame_bg"
                android:paddingLeft="8dip"
                android:paddingTop="47dip" >

                <ImageView
                    android:id="@+id/user_info_portrait"
                    android:layout_width="74dip"
                    android:layout_height="74dip"
                    android:layout_marginLeft="4dip"
                    android:layout_marginTop="4dip"
                    android:background="@drawable/avatar_background" />

                <TextView
                    android:id="@+id/user_info_head_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:layout_alignTop="@+id/user_info_portrait"
                    android:layout_marginLeft="8dip"
                    android:layout_marginTop="4dip"
                    android:layout_toRightOf="@+id/user_info_portrait"
                    android:shadowColor="#ff000000"
                    android:shadowDx="0.0"
                    android:shadowDy="1.0"
                    android:shadowRadius="1.0"
                    android:textColor="#FFFFFF"
                    android:textSize="19sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:id="@+id/user_info_head_blank"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/user_info_head_name"
                    android:layout_below="@+id/user_info_head_name"
                    android:layout_marginTop="4dip"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:shadowColor="#ff000000"
                        android:shadowDx="0.0"
                        android:shadowDy="1.0"
                        android:shadowRadius="1.0"
                        android:textColor="#FFFFFF"
                        android:textSize="11sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/declaration_layout"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/user_info_head_blank"
                    android:layout_below="@+id/user_info_head_blank"
                    android:layout_marginTop="4dip" >

                    <TextView
                        android:id="@+id/declaration"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="welcome!"
                        android:gravity="center_vertical"
                        android:paddingRight="8dip"
                        android:textColor="#ffb4b4b4"
                        android:textSize="12sp" />
                </LinearLayout>
            </RelativeLayout>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dip"
            android:layout_marginRight="8dip"
            android:layout_marginTop="20dip"
            android:background="@drawable/about_top_bg"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="8dip" >

            <TextView
                android:layout_width="60dip"
                android:layout_height="30dip"
                android:layout_marginLeft="8dip"
                android:gravity="center_vertical"
                android:text="昵称"
                android:textColor="#222222"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/user_name"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:paddingLeft="8dip"
                android:textColor="#333333"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dip"
            android:layout_marginRight="8dip"
            android:background="@drawable/about_mid_bg"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="8dip" >

            <TextView
                android:layout_width="60dip"
                android:layout_height="30dip"
                android:layout_marginLeft="8dip"
                android:gravity="center_vertical"
                android:text="性别"
                android:textColor="#222222"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/user_gender"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:paddingLeft="8dip"
                android:textColor="#333333"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dip"
            android:layout_marginRight="8dip"
            android:background="@drawable/about_mid_bg"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="8dip" >

            <TextView
                android:layout_width="60dip"
                android:layout_height="30dip"
                android:layout_marginLeft="8dip"
                android:gravity="center_vertical"
                android:text="地址"
                android:textColor="#222222"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/user_address"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:paddingLeft="8dip"
                android:textColor="#333333"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dip"
            android:layout_marginRight="8dip"
            android:background="@drawable/about_mid_bg"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="8dip" >

            <TextView
                android:layout_width="60dip"
                android:layout_height="30dip"
                android:layout_marginLeft="8dip"
                android:gravity="center_vertical"
                android:text="电话"
                android:textColor="#222222"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/user_mobile"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:paddingLeft="8dip"
                android:textColor="#333333"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dip"
            android:layout_marginRight="8dip"
            android:background="@drawable/about_bottom_bg"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="8dip" >

            <TextView
                android:layout_width="60dip"
                android:layout_height="30dip"
                android:layout_marginLeft="8dip"
                android:gravity="center_vertical"
                android:text="标签"
                android:textColor="#222222"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/user_tag"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:paddingLeft="8dip"
                android:textColor="#333333"
                android:textSize="14sp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>